<h1>Find jobs</h1>
<h3><%= link_to "Do you want to create a new job instead?", new_job_path %></h3>
We have <%= Job.count %> jobs and counting!

<label>
  <input>
  <% my_args = { "account_id" => 1, "latitude" => 1.0, "longitude" => 1.0, "radius" => 1.0, "time" => Time.now, "limit" => 5 }  %>
  </label>
  <button>SEARCH
    <%  FeedGenerator.initialize_feed(@jobs.as_json, my_args) %>
    <%  #Job.start_search(@jobs, @my_args) %>
  </button>
  <h1>All available Jobs</h1>

  <ul>
    <%  @jobs.each do |job| %>
    <%  unless job.archived? %>
    <li>
      <b><%=  link_to job.title, job %></b>
      <%=  link_to "(apply)", new_job_application_path(job) %>
    </li>
    <%  end %>
    <%  end %>
  </ul>

